<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
   
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" media="all" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
     <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
       
   
      @(Html.Telerik().StyleSheetRegistrar().DefaultGroup(group => group.Add("telerik.common.css").Add("telerik.hay.min.css").Combined(true)
      .Compress(true)))
      @RenderSection("head", required: false)
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>

            <div id="sitetitle">
                Business Flow
            </div>
          </div>
            <div id="menu">
             
            <div class="nav">
                <ul>
                  
                    <li  class="first">@Html.ActionLink("Home", "Index", "Home")</li>
                      @if (User.IsInRole(BusinessFlow.Constants.AccountsUser))
                      {
                    <li>@Html.ActionLink("Dashboard", "AccountsDashboard","Accounts")</li>
                      }
                      @if (User.IsInRole(BusinessFlow.Constants.QuotationUser))
                      {
                     <li>@Html.ActionLink("Quotation", "Index", "Enquiries")</li>
                      }
                      @if (User.IsInRole(BusinessFlow.Constants.Administrator))
                      {
                      <li>@Html.ActionLink("Administrator","AdminTasks","Admin")</li>
                      }
                      @if (User.IsInRole(BusinessFlow.Constants.ProductionUser))
                      {
                      <li>@Html.ActionLink("Production","ProductionDashboard","Production")</li>
                      }
                      @if (User.IsInRole(BusinessFlow.Constants.TeamLeader))
                      {
                      <li>@Html.ActionLink("Team Leader","TeamLeaderDashBoard","TeamLeader")</li>
                      }
                </ul>
            </div>
            </div>
       <div class="clear">
        </div>
        <div id="main" class="contentblock">
            @RenderBody()
        </div>
        <footer>
        </footer>
    </div>
  
</body>
</html>
