@model BusinessFlow.Models.Employee

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Employee</legend>

    <div class="display-label">EmployeeName</div>
    <div class="display-field">@Model.EmployeeName</div>

    <div class="display-label">EmployeeRole</div>
    <div class="display-field">@Model.EmployeeRole</div>

    <div class="display-label">IsTeamLeader</div>
    <div class="display-field">@Model.IsTeamLeader</div>

    <div class="display-label">EmployeeTeam</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.EmployeeTeam).ToString()</div>

    <div class="display-label">Tasks</div>
    <div class="display-field">@(Model.Tasks == null ? "None" : Model.Tasks.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


