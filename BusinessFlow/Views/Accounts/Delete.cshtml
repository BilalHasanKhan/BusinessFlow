@model BusinessFlow.Models.Enquiry

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Enquiry</legend>

    <div class="display-label">TentativeDeliveryDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.TentativeDeliveryDate)</div>

    <div class="display-label">Requirement</div>
    <div class="display-field">@Model.Requirement</div>

    <div class="display-label">Contact</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Contact).ToString()</div>

    <div class="display-label">SiteAddress</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.SiteAddress).ToString()</div>

    <div class="display-label">DesignerContact</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.DesignerContact).ToString()</div>

    <div class="display-label">Status</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Status).ToString()</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


