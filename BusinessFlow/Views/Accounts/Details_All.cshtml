@model BusinessFlow.ViewModels.AccountClientDetailsViewModel

@{
    ViewBag.Title = "Details_All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Enquiry Details</h2>


    <fieldset>
    <legend>Tentative Delivery Date </legend>
       <div class="display-field">@String.Format("{0:dddd, MMMM d, yyyy}", Model.Enquiry1.TentativeDeliveryDate)</div>
    </fieldset>
    <fieldset>
    <legend>Requirement Summary</legend>
    <div class="display-field">@Model.Enquiry1.Requirement</div>
    </fieldset>
    <fieldset>
    <legend>Contact Details</legend>
    <div class="display-field">@(Html.Telerik().Grid<BusinessFlow.Models.Contact>("Contact").Name("contact"))</div>
    </fieldset>
    <fieldset>
    <legend>Site Address</legend>
    <div class="display-field">@(Html.Telerik().Grid<BusinessFlow.Models.Address>("Address").Name("address"))</div>
    </fieldset>
    <fieldset>
    <legend>Designer Contact</legend>
    <div class="display-field">@(Html.Telerik().Grid<BusinessFlow.Models.Contact>("Designer").Name("designer"))</div>
    </fieldset>
     <fieldset>
    <legend>Additional Details</legend>
    <div class="display-field">@(Html.Telerik().Grid<BusinessFlow.Models.EnquiryDetails>("Details").Name("enquiryDetails"))</div>
    </fieldset>

         <fieldset>
    <legend>Additional Details</legend>
    <div class="display-field">@(Html.Telerik().Grid<BusinessFlow.Models.ClientRegister>("Details").Name("clientDetails"))</div>
    </fieldset>

<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Enquiry1.EnquiryID }) |
    @Html.ActionLink("Back to List", "Index")
    @Html.ActionLink("Confirm Project", "ConfirmProject", new { id = Model.Enquiry1.EnquiryID })
</p>
