@model IEnumerable<BusinessFlow.Models.Address>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Block
        </th>
        <th>
            Lane
        </th>
        <th>
            City
        </th>
        <th>
            State
        </th>
        <th>
            zipCode
        </th>
        <th>
            Enquiry
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AddressID }) |
            @Html.ActionLink("Details", "Details", new { id=item.AddressID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AddressID })
        </td>
        <td>
			@item.Block
        </td>
        <td>
			@item.Lane
        </td>
        <td>
			@item.City
        </td>
        <td>
			@item.State
        </td>
        <td>
			@item.zipCode
        </td>
        <td>
			@(item.Enquiry == null ? "None" : item.Enquiry.Count.ToString())
        </td>
    </tr>
}

</table>


